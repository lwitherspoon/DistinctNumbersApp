<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.laura.distinctnumbersapp.MainActivity">

    <TextView
            android:layout_width="330dp"
            android:layout_height="68dp"
            android:text="@string/main_title"
            android:id="@+id/title" android:textSize="26sp" android:textAlignment="center"
            android:layout_marginStart="26dp" android:layout_marginEnd="26dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="52dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginRight="26dp" tools:layout_editor_absoluteY="41dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showDistinctBtn"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="144dp"
            android:id="@+id/distinctNumbers" android:textSize="18sp" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="71dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
            app:layout_constraintHorizontal_bias="0.333" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/numbersInput" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="67dp" app:layout_constraintTop_toBottomOf="@+id/title"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
            android:inputType="text" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="@string/note"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:id="@+id/textView2" android:textAlignment="center" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="@+id/numbersInput"
            android:layout_marginEnd="30dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="75dp" tools:layout_constraintLeft_creator="1" android:layout_marginBottom="73dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/title"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

</android.support.constraint.ConstraintLayout>
